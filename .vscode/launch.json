{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Extension",
      "preLaunchTask": {
        "type": "npm",
        "script": "build",
        "group": "build",
        "problemMatcher": [],
        "label": "npm: build",
        "detail": "esbuild main.ts --bundle --platform=node --target=node16.12 --outfile=build/out.js --external:vscode"
      },
      "type": "extensionHost",
      "request": "launch",
      "args": ["--extensionDevelopmentPath=${workspaceFolder}"]
    }
  ]
}
