{
  "name": "easy-rpc",
  "displayName": "easy-rpc",
  "description": "easy-rpc language support",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.64.0"
  },
  "categories": [
    "Programming Languages",
    "Snippets"
  ],
  "scripts": {
    "vscode:prepublish": "npm run build",
    "build": "esbuild main.ts --bundle --platform=node --format=cjs --outdir=build --external:vscode --minify --target=node14"
  },
  "main": "build/main.js",
  "contributes": {
    "languages": [
      {
        "id": "easy-rpc",
        "aliases": [
          "easy-rpc",
          "erpc"
        ],
        "extensions": [
          ".erpc"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "easy-rpc",
        "scopeName": "source.erpc",
        "path": "./syntaxes/erpc.tmLanguage.json"
      }
    ],
    "snippets": [
      {
        "language": "easy-rpc",
        "path": "./snippets/erpc.json"
      }
    ]
  },
  "activationEvents": [
    "onLanguage:easy-rpc",
    "workspaceContains:**/*.erpc"
  ],
  "devDependencies": {
    "@types/node": "^17.0.21",
    "@types/vscode": "^1.65.0",
    "esbuild": "^0.14.25"
  },
  "dependencies": {
    "vscode-languageclient": "^7.0.0"
  }
}
