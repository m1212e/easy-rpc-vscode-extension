{
  "name": "easy-rpc",
  "displayName": "easy-rpc",
  "description": "easy-rpc language support",
  "repository": "https://github.com/m1212e/easy-rpc-vscode-extension",
  "publisher": "easy-rpc",
  "version": "0.0.0",
  "engines": {
    "vscode": "^1.64.0"
  },
  "categories": [
    "Programming Languages",
    "Snippets"
  ],
  "scripts": {
    "build": "node ./build.js"
  },
  "main": "build/main.js",
  "contributes": {
    "languages": [
      {
        "id": "easy-rpc",
        "aliases": [
          "easy-rpc",
          "erpc"
        ],
        "extensions": [
          ".erpc"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "easy-rpc",
        "scopeName": "source.erpc",
        "path": "./syntaxes/erpc.tmLanguage.json"
      }
    ],
    "snippets": [
      {
        "language": "easy-rpc",
        "path": "./snippets/erpc.json"
      }
    ]
  },
  "activationEvents": [
    "onLanguage:easy-rpc",
    "workspaceContains:**/erpc.json",
    "workspaceContains:**/roles.json",
    "workspaceContains:**/*.erpc"
  ],
  "devDependencies": {
    "@types/node": "^17.0.21",
    "@types/vscode": "^1.64.0",
    "esbuild": "^0.14.25"
  },
  "dependencies": {
    "follow-redirects": "^1.15.6",
    "vscode-languageclient": "^7.0.0"
  }
}
